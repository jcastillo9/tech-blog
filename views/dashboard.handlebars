<div class ="row">
    <div class="col-auto">
        <h2>Dashboard</h2>
        <h3>Welcome, {{user.username}}!</h3>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Post:</h3>
        <form class="form new-comment-form">
            <div class="form-group">
                <label for="post-title">Post title:</label>
                <input class="form-input" type="text" id="post-title" title="post-title" />
            </div>
            <div class="form-group">
                <label for="post-content">content:</label>
                <input class="post-content" type="text" id="post-content" name="post-content" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

{{#if posts.length}}
<div class="col-md-6 post-list">
    <h3>Current Posts</h3>
    {{#each posts as |post|}}
    <div class="row-mb-2">
        <div class="col-md-8">
            <h4><a href="/post/{{post.id}}">{{<post.title}}</a></h4>
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary" data-id="
        {{post.id}}">DELETE</button>
        </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>
