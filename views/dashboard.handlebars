<div class="row">
    <h3>Welcome, {{username}}!</h3>
</div>

<div id="new-post-form">
    <div>
    <h4>Create New Post:</h4>
    <form class="new-post-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-desc">Content:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      
            <button type="submit" class="button">Create</button>
        </form>
  </div>

<br/>
  {{#if posts.length}}
 <div class="row">
    <h3>Posts:</h3>
    </div>

    {{#each posts as |post|}}
    <div class="row mb-2 post-list">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>

