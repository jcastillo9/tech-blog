<div class="row">
    <h3>Welcome, {{user.username}}!</h3>
</div>

<div class="card d-none" id="new-post-form">
    <div class="card-header">
        <h4>Create New Post:</h4>
    </div>
    <div class="card-body">
        <form class="mb-2">
            <div class="form-group">
                <label for="post-title">Title</label>
                <input type="text" class="form-control" id="post-title">
            </div>
            <div class="form-group">
                <label for="post-content">Content</label>
                <textarea class="form-control" id="post-content"></textarea>
            </div>

            <button type="submit" class="btn btn-info">Create</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        {{#each user.posts as |post|}}

        <div class="card-header">
            <h4>Edit Post</h4>
            </div>
            <div class="card-body">
                <form class="mb-2" post-id="{{post.id}}">
                    <div class="form-group">
                        <label for="post-title">Title</label>
                        <input type="text" class="form-control post-title" value="{{post.title}}">
                    </div>
                    <div class="form-group">
                        <label for="post-content">Content</label>
                        <textarea class="form-control post-content">{{post.content}}</textarea>
                    </div>

                    <button class="updatePost btn btn-primary">Update Post</button>
                    <button class="deletePost btn btn-primary">Delete</button>
                </form>
            </div>
        </div>


<div class="row d-flex justify-content-center">
    <button class="newPost btn btn-primary" id="newPost">âž• New Post</button>
</div>

<script src="../public/js/dashboard.js"></script>  