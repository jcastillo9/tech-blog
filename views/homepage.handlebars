{{#each posts as |post|}}
<div class="card">
  <div class="card-header">
    <h2>
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
  </div>
  <div class="card-body">
      <p>{{post.content}}</p>
      <footer class="blockquote-footer"><p>Created by {{post.user.username}} on {{format_date post.date_created}}</p></footer>
  </div>
</div>
{{/each}}

