{{#each posts as |post|}}
<div class="card col d-flex justify-content-center ">
  <div class="card-header">
    <h2>
            <a class="text-white" href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
  </div>
  <div class="card-body">
      <p>{{post.content}}</p>
      <small class="text-muted">created by {{post.user.username}} on {{format_date post.date_created}}</small>
  </div>
</div>
{{/each}}

