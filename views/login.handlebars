<div class="forms justify-content-center mt-5">
    <div class="form">
        <h2>Login</h2>
        <form class="form login-form">
            <div class="form-group">
                <label for="email-login">Email:</label>
                <input class="form-control" type="email" id="email-login" aria-describedby="email">
            </div>
            <div class="form-group">
                <label for="password-login">Password:</label>
                <input class="form-control" type="password" id="password-login">
            </div>
            <button class="btn btn-primary" type="submit">Login</button>
        </form>

    </div>
    <div class="form">
        <h2>Signup</h2>
        <form class="form signup-form">
            <div class="form-group">
                <label for="name-signup">Name:</label>
                <input class="form-control" type="text" id="name-signup">
            </div>
            <div class="form-group">
                <label for="email-signup">Email:</label>
                <input class="form-control" type="text" id="email-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup">Password:</label>
                <input class="form-control" type="text" id="password-signup" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Signup</button>
            </div>
        </form>

    </div>

</div>

<script src="../public/js/login.js"></script>