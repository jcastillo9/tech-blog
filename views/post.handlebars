<div class="text-center">
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <p>Created by{{post.user_id}} on {{format_date post.date_created}}</p>
<p>
    <button class="btn btn-primary">Add a Comment</button>
</p>
</div>

<div class="text-center">
    <h4>Comments</h4>
    {{#each post.comments as |comment|}}
    <p>{{comment.content}} - {{comment.user.username}}, {{format_date comment.date_created}}</p>

    {{/each}}
</div>
{{#if logged_in}}
<div class="text-center">
    <h4>New Comment</h4>
    <div class="form-group">
        <label for="comment">New Comment</label>
        <textarea class="form-control" id="comment" required></textarea>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</div>
  {{/if}}
  <script src="../public/js/post.js"></script>